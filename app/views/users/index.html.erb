<h1>ユーザー一覧</h1>
<ul>
  <% @users.each do |user| %>
    <li>
    <%= link_to user.name, user_path(user.id) %>
<% if user.id != @current_user.id %>
  <% if user.followed_by?(@current_user) %>
    <%= link_to 'フォロー解除', user_follow_path(user.id, @follow.id), method: :delete %>
  <% else %>
    <%= link_to 'フォロー', user_follows_path(user.id), method: :post %>
  <% end %>
<% end %>
    </li>
  <% end %>
</ul>
