<h2>ユーザー一覧</h2>
<ul>
  <% @users.each do |user| %>
    <li>
    <%= link_to user.name, user_path(user.id) %>
    <% if user.id != @user.id %>
      <% if user.followed_by?(@user) %>
        <%= link_to 'フォロー解除', user_follow_path(user.id, @follow.id), method: :delete %>
      <% else %>
        <%= link_to 'フォロー', user_follows_path(user.id), method: :post %>
      <% end %>
    <% end %>
    </li>
  <% end %>
</ul>
